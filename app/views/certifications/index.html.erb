<h1>Listing certifications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Time in minutes</th>
    <th>Fee</th>
    <th>Path</th>
    <th>Prerequisite</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @certifications.each do |certification| %>
  <tr>
    <td><%= certification.name %></td>
    <td><%= certification.description %></td>
    <td><%= certification.time_in_minutes %></td>
    <td><%= certification.fee %></td>
    <td><%= certification.path_id %></td>
    <td><%= certification.prerequisite_id %></td>
    <td><%= link_to 'Show', certification %></td>
    <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
    <td><%= link_to 'Destroy', certification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

